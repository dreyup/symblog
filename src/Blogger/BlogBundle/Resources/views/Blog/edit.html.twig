{% extends '::admin.layout.html.twig' %}

{% block body %}
    <h1 xmlns="http://www.w3.org/1999/html">Blog edit</h1>

    {% for flashMessage in app.session.flashbag.get('blogger-notice') %}
        <div class="blogger-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <br>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
    {{ form_row(edit_form.title) }}
    {{ form_row(edit_form.author) }}
    {{ form_row(edit_form.blog) }}
    {{ form_row(edit_form.image) }}
    <img src="{{ asset(['images/', edit_form.vars.value.image]|join) }}"/>
    {{ form_row(edit_form.tags) }}
        <input class="btn btn-success" type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <br>

    {{ form_start(delete_form) }}
        <input type="submit"  class="btn btn-danger" value="Delete">
    {{ form_end(delete_form) }}

    <br>
    <br>
    <a href="{{ path('blog_index') }}">Back to the list</a>

{% endblock %}